# NOOR Platform - Environment Variables
# Copy this file to .env and update with your values

# PostgreSQL Configuration
POSTGRES_DB=noor_db
POSTGRES_USER=noor_user
POSTGRES_PASSWORD=changeme_postgres_password
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# MongoDB Configuration
MONGO_DB=noor_mongo
MONGO_USER=noor_user
MONGO_PASSWORD=changeme_mongo_password
MONGO_HOST=localhost
MONGO_PORT=27017

# Neo4j Configuration
NEO4J_USER=neo4j
NEO4J_PASSWORD=changeme_neo4j_password
NEO4J_URI=bolt://localhost:7687

# Redis Configuration
REDIS_PASSWORD=changeme_redis_password
REDIS_HOST=localhost
REDIS_PORT=6379

# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_GROUP_ID=noor-platform

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true

# JWT Configuration
JWT_SECRET_KEY=changeme_jwt_secret_key_at_least_32_characters
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# UAE Pass OAuth Configuration
UAE_PASS_CLIENT_ID=your_uae_pass_client_id
UAE_PASS_CLIENT_SECRET=your_uae_pass_client_secret
UAE_PASS_REDIRECT_URI=http://localhost:3000/auth/callback
UAE_PASS_AUTHORIZATION_URL=https://stg-id.uaepass.ae/idshub/authorize
UAE_PASS_TOKEN_URL=https://stg-id.uaepass.ae/idshub/token
UAE_PASS_USERINFO_URL=https://stg-id.uaepass.ae/idshub/userinfo

# External API Keys (Health Integration)
SEHA_API_KEY=your_seha_api_key
DHA_API_KEY=your_dha_api_key
MOHAP_API_KEY=your_mohap_api_key

# External API Keys (Payroll & Pensions)
GPSSA_API_KEY=your_gpssa_api_key
ADPF_API_KEY=your_adpf_api_key

# AI/ML Configuration
OPENAI_API_KEY=your_openai_api_key
ANTHROPIC_API_KEY=your_anthropic_api_key

# Vector Database Configuration (Pinecone)
PINECONE_API_KEY=your_pinecone_api_key
PINECONE_ENVIRONMENT=us-west1-gcp
PINECONE_INDEX_NAME=noor-vectors

# Biometric Processing
BIOMETRIC_SIMILARITY_THRESHOLD=0.95
BIOMETRIC_FAR_TARGET=0.001

# Data Privacy Configuration
DIFFERENTIAL_PRIVACY_EPSILON=1.0
K_ANONYMITY_THRESHOLD=100

# Encryption Keys
DATA_ENCRYPTION_KEY=changeme_32_char_encryption_key
HEALTH_DATA_ENCRYPTION_KEY=changeme_32_char_health_key

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Monitoring
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090

# Environment
ENVIRONMENT=development
DEBUG=true
